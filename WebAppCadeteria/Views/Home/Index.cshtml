@{
    ViewData["Title"] = "Home Page";
}

@model List<Cadeteria.Model.Cadete>

    <a asp-action="CargarCadete" asp-controller="Cadete" type="button" class="btn btn-warning">Agregar</a>
    <h1 class="text-center">Lista de Cadetes</h1>

    <table class="table table-dark">
        <tr>
            <th scope="col">Codigo ID</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Telefono</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nombre</td>
                <td>@item.Apellido</td>
                <td>@item.Telefono</td>
            </tr>
        }
    </table>
