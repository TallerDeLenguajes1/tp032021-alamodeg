@{
    ViewData["Title"] = "Home Page";
}

@model List<Cadeteria.Model.Cadete>

<h1>Alta de Pedidos</h1><br />

<form asp-action="AddPedido" method="post">
    <div class="input-group">
        <div class="input-group-prepend">
            <label class="input-group-text" for="select">Cadete</label>
        </div>
        <select class="custom-select btn-outline-primary" id="select" aria-label="Default select example" name="id">
            @foreach (var item in Model)
            {
                <option value="@item.Id">@item.Nombre</option>
            }
        </select>
    </div><br />
    <div class="form-group">
        <label for="apellido">Apellido del Cliente</label>
        <input type="text" name="apellido" placeholder="Gomez" required />
    </div>
    <div class="form-group">
        <label for="nombre">Nombre del cliente</label>
        <input type="text" name="nombre" placeholder="Garcia" required />
    </div>
    <div class="form-group">
        <label for="dir">Direccion del cliente</label>
        <input type="text" name="dir" placeholder="Av. Belgrano 4100" required />
    </div>
    <div class="form-group">
        <label for="tel">Telefono del cliente</label>
        <input type="text" name="tel" placeholder="4659853" required />
    </div>
    <div class="form-group">
        <label for="obs">Observaciones</label>
        <input type="text" name="obs" placeholder="¡CUIDADO con el perro!" required />
    </div>
    <br /><br />
    <input type="submit" class="btn btn-primary" value="Enviar" />
</form>
