@model Cadeteria.Model.MostrarPedidosVM

<a asp-action="AddPedido" asp-controller="Pedido" type="button" class="btn btn-danger">Agregar</a>
<h1 class="text-center">Lista de Pedidos</h1><br />

<table class="table table-dark">
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Estado</th>
        <th scope="col">Cliente</th>
        <th scope="col">Observacion</th>
        <th scope="col">Cadetes</th>
    </tr>
   @foreach (var item in Model.ListaPedidos)
   {
<tr>
    <td>@item.Id</td>
    <td>@item.Estado</td>
    <td>@item.Cliente.Apellido</td>
    <td>@item.Observacion</td>
    <td>
        <fieldset>
            <select class="custom-select-sm" name="idCadete" aria-label="Default select example">
                @foreach (var cadete in Model.ListaCadetes)
                {
                    if (cadete.Id == item.Id)
                    {
                        <option value="@cadete.Id" selected>@cadete.Nombre</option>
                    }
                    else
                    {
                        <option value="@cadete.Id">@cadete.Nombre</option>
                    }
                }
            </select>
        </fieldset>
    </td>

    <td>
        <form asp-action="EditPedido" asp-controller="Pedido" method="post">
            <input type="hidden" name="id_pedido" value="@item.Id">
            <button type="submit" class="btn btn-success">Editar</button>
        </form>
    </td>
    <td>
        <form asp-action="DeletePedido" asp-controller="Pedido" method="post">
            <input type="hidden" name="id_pedido" value="@item.Id">
            <button type="submit" class="btn btn-danger">X</button>
        </form>
    </td>
</tr>
   }
</table>
